@model MyFace.Models.View.UserViewModel

@{
    Layout = "_Layout";
}

<section id="hero-section">
    <img class="cover-image" src="@Model.CoverImageUrl" alt="Cover Image"/>
    <div class="user-summary">
        <img class="profile-image" src="@Model.ProfileImageUrl" alt="Profile Image"/>
        <div class="user-details">
            <h1 class="user-name">@Model.DisplayName</h1>
            <div class="username-and-email">
                <div class="user-username">@Model.Username</div>
                <div class="user-email">@Model.Email</div>
            </div>
        </div>
    </div>

</section>

<section id="posts-section" class="post-list-section">
    <h2 class="post-list-title">@(Model.FirstName)'s Posts</h2>
    <partial name="_PostList" model="@Model.Posts"/>
    @if (Model.HasMorePosts)
    {
        <a class="show-more-link" href="@Model.ShowMorePostsUrl">Show More</a>
    }
</section>

<section id="likes-section" class="post-list-section">
    <h2 class="post-list-title">Posts @Model.FirstName Liked</h2>
    <partial name="_PostList" model="@Model.Likes"/>
    @if (Model.HasMoreLikes)
    {
        <a class="show-more-link" href="@Model.ShowMoreLikesUrl">Show More</a>
    }
</section>

<section id="dislikes-section" class="post-list-section">
    <h2 class="post-list-title">Posts @Model.FirstName Disliked</h2>
    <partial name="_PostList" model="@Model.Dislikes"/>
    @if (Model.HasMoreDislikes)
    {
        <a class="show-more-link" href="@Model.ShowMoreDislikesUrl">Show More</a>
    }
</section>